<%- include('../partials/head') %>
<%- include('../partials/nav') %>
<div class="container mt-5">
  <h2>Edit <%= foundBook.title %></h2>
  <form action="/books/<%= foundBook._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="title" class="form-control" value="<%= foundBook.title %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Category</label>
      <input type="text" name="category" class="form-control" value="<%= foundBook.category %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea name="description" rows="3" class="form-control" required><%= foundBook.description %></textarea>
    </div>
    <div class="mb-3">
      <label class="form-label">Book Image URL</label>
      <input type="text" name="image" class="form-control" value="<%= foundBook.image %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
    <a href="/books" class="btn btn-secondary">Cancel</a>
  </form>
</div>
</body></html>
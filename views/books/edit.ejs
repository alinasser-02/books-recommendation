  <title>Edit Book</title>
</head>
<body>
  <h1>Edit <%= foundBook.title %></h1>
  
  <form action="/books/<%= foundBook._id%>?_method=PUT" method="POST"> 

    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= foundBook.title %>"
      required />
  
    <label for="category">Category:</label>
    <input type="category" name="category" id="category" value="<%= foundBook.category %>" required />

    <label for="description" >Description:</label>
    <textarea name="description" id="description"  rows="3" required> <%= foundBook.description %></textarea>

    <label for="image" > Book Image URL:</label>
    <input type="text" name="image" id="image" value="<%= foundBook.image %>"  required />

  <button type="submit">Edit <%= foundBook.title %></button>
</form>
  <a href="/books">back</a>

</body>
</html>
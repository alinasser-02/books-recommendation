<%- include("../partials/head") %>
<%- include("../partials/nav") %>

<div class="container mt-4">
  <h1 class="mb-4"><%= user.username %>'s Readlist</h1>

  <% if (readList.length === 0) { %>
    <p class="text">You have no books in your readlist yet.</p>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% readList.forEach(book => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= book.image %>" class="card-img-top" alt="book-image">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text flex-grow-1"><%= book.description.substring(0, 100) %>...</p>
              <div class="d-flex justify-content-around mt-3">
                <a href="/books/<%= book._id %>" 
 
                  class="btn btn-primary">View Book</a>
                <form action="/books/<%= book._id %>/readlist?_method=DELETE" method="POST">
                  <button class="btn btn-danger">Remove</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

